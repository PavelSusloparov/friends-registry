{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "jsx": "react",
        "declaration": true,
        "noImplicitAny": true,
        "strict": true,
        "removeComments": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "esnext",
        "sourceMap": true,
        "lib": ["esnext"],
        "outDir": "./lib"
    },
    "exclude": ["node_modules", "**/*.spec.ts"],
    "include": ["./src"]
}
